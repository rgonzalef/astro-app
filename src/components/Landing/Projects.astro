---
import projects from '../../config/projects.json';

---
<h2 class="font-bold text-5xl my-8 text-center">Projects</h2>
{
    projects.map(project => (
        <div class="flex flex-col md:flex-row text-center gap-5 my-5 md:text-left">
            <div class="flex-1 p-4">
                <h3 class=" my-4 text-3xl font-bold">{project.title}</h3>
            <p class="my-2">{project.description}</p>
            <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
                More Info
            </button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-80 m-auto" alt="{project.image}" />
            </div>
        </div>
    ))
}